@model List<Entities.Concrete.TableModels.Transaction>
@using System.Security.Claims

@{
    ViewData["Title"] = "Transaction Tarixçəsi";
    var currentUserId = int.Parse(User.FindFirst(ClaimTypes.NameIdentifier)?.Value);

    // Hesab nömrəsini maskala: 1234567890123456 -> ************3456
    string MaskAccountNumber(string accountNumber)
    {
        if (string.IsNullOrEmpty(accountNumber) || accountNumber.Length < 4)
            return accountNumber;

        var lastFour = accountNumber.Substring(accountNumber.Length - 4);
        return new string('*', 12) + lastFour;
    }
}

<section class="app">
    <aside class="sidebar card">
        <div class="sidebar__head">
            <h2 class="h2">Panel</h2>
            <p class="muted small">@DateTime.Now.ToString("dd MMM yyyy")</p>
        </div>

        <nav class="nav">
            <a asp-controller="Home" asp-action="Index" class="nav__item">
                <span>🏦</span> <span>Hesab</span>
            </a>
            <a asp-controller="Transfer" asp-action="Index" class="nav__item">
                <span>💸</span> <span>Köçürmə</span>
            </a>
            <a asp-controller="Chat" asp-action="Index" class="nav__item">
                <span>💬</span> <span>Chat</span>
            </a>
            <a asp-controller="Settings" asp-action="Index" class="nav__item">
                <span>⚙️</span> <span>Ayarlar</span>
            </a>
            <a asp-controller="Transfer" asp-action="History" class="nav__item is-active">
                <span>📜</span> <span>Tarixçə</span>
            </a>
        </nav>
    </aside>

    <section class="content">
        <div class="view">
            <div class="card">
                <div class="card__header" style="display: flex; justify-content: space-between; align-items: flex-start; flex-wrap: wrap; gap: 1rem;">
                    <div>
                        <h3 class="h3">Transaction Tarixçəsi</h3>
                        <p class="muted small">Bütün əməliyyatlarınız.</p>
                    </div>

                    <div style="display: flex; gap: 0.5rem; flex-wrap: wrap; align-items: center;">
                        <form asp-action="History" method="get" style="display: flex; gap: 0.5rem; align-items: center;">
                            <input type="date" name="startDate" class="input" value="@ViewBag.StartDate" style="width: auto;" />
                            <span>-</span>
                            <input type="date" name="endDate" class="input" value="@ViewBag.EndDate" style="width: auto;" />
                            <button type="submit" class="btn btn--soft">Filter</button>
                        </form>

                        <a asp-action="ExportPDF" asp-route-startDate="@ViewBag.StartDate" asp-route-endDate="@ViewBag.EndDate" class="btn btn--primary">
                            📄 PDF
                        </a>
                        <a asp-action="ExportExcel" asp-route-startDate="@ViewBag.StartDate" asp-route-endDate="@ViewBag.EndDate" class="btn" style="background: #10b981; color: white;">
                            📊 Excel
                        </a>
                    </div>
                </div>

                <div class="tablewrap">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Tarix</th>
                                <th>Növ</th>
                                <th>Tərəf</th>
                                <th>Hesab Nömrəsi</th>
                                <th>Məbləğ</th>
                                <th>Qeyd</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                foreach (var t in Model.OrderByDescending(x => x.CreatedDate))
                                {
                                    @* ✅ Depozit = SenderId və ReceiverId eyni olanda *@
                                    var isDeposit = t.SenderId == t.ReceiverId;
                                    var isSent = !isDeposit && t.SenderId == currentUserId;
                                    var otherUser = isDeposit ? null : (isSent ? t.Receiver : t.Sender);

                                    <tr>
                                        <td>@t.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>
                                            @if (isDeposit)
                                            {
                                                <span class="badge" style="background: #3b82f6; color: white; padding: 0.25rem 0.75rem; border-radius: 6px; font-size: 0.75rem; font-weight: 600;">
                                                    💳 Depozit
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge" style="background: @(isSent ? "#ef4444" : "#10b981"); color: white; padding: 0.25rem 0.75rem; border-radius: 6px; font-size: 0.75rem; font-weight: 600;">
                                                    @(isSent ? "Göndərildi" : "Alındı")
                                                </span>
                                            }
                                        </td>
                                        <td style="font-weight: 500;">
                                            @if (isDeposit)
                                            {
                                                <span style="color: #3b82f6;">Stripe Payment</span>
                                            }
                                            else
                                            {
                                                @:@otherUser.FirstName ******
                                            }
                                        </td>
                                        <td class="mono" style="font-size: 0.85rem; color: #6b7280;">
                                            @if (isDeposit)
                                            {
                                                <span>-</span>
                                            }
                                            else
                                            {
                                                @MaskAccountNumber(otherUser.AccountNumber)
                                            }
                                        </td>
                                        <td style="color: @(isDeposit ? "#3b82f6" : (isSent ? "#ef4444" : "#10b981")); font-weight: 700; font-size: 1rem;">
                                            @(isDeposit || !isSent ? "+" : "-")@t.Amount.ToString("N2") AZN
                                        </td>
                                        <td style="max-width: 200px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                            @(t.Description ?? "-")
                                        </td>
                                        <td><span class="badge">@t.Status</span></td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="muted" style="text-align: center; padding: 2rem;">Hələ ki, əməliyyat yoxdur.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</section>