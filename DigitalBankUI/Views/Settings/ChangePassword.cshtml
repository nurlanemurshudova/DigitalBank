
@model ChangePasswordDto
@{
    ViewData["Title"] = "Şifrə Dəyişdir";
}

<section class="app">
    <aside class="sidebar card">
        <div class="sidebar__head">
            <h2 class="h2">Panel</h2>
            <p class="muted small">@DateTime.Now.ToString("dd MMM yyyy")</p>
        </div>

        <nav class="nav">
            <a asp-controller="Home" asp-action="Index" class="nav__item">
                <span>🏦</span> <span>Hesab</span>
            </a>
            <a asp-controller="Transfer" asp-action="Index" class="nav__item">
                <span>💸</span> <span>Köçürmə</span>
            </a>
            <a asp-controller="Chat" asp-action="Index" class="nav__item">
                <span>💬</span> <span>Chat</span>
            </a>
            <a asp-controller="Settings" asp-action="Index" class="nav__item is-active">
                <span>⚙️</span> <span>Ayarlar</span>
            </a>
            <a asp-controller="Transfer" asp-action="History" class="nav__item">
                <span>⚙️</span> <span>Tarixce</span>
            </a>
        </nav>
    </aside>

    <section class="content">
        <div class="view">
            <div class="card" style="max-width: 600px; margin: 0 auto;">
                <div class="card__header">
                    <h3 class="h3">Şifrə dəyişdir</h3>
                    <p class="muted small">Yeni şifrə təyin edin</p>
                </div>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-error">
                        <div asp-validation-summary="All"></div>
                    </div>
                }

                <form asp-action="ChangePassword" method="post" class="form">
                    <div class="grid1">
                        <label class="field">
                            <span class="field__label">Cari şifrə</span>
                            <input asp-for="CurrentPassword" class="input" type="password" placeholder="Mövcud şifrənizi daxil edin" required />
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </label>

                        <label class="field">
                            <span class="field__label">Yeni şifrə</span>
                            <input asp-for="NewPassword" class="input" type="password" placeholder="Minimum 6 simvol" required />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                            <small class="muted">Minimum 6 simvol, böyük və kiçik hərf, rəqəm</small>
                        </label>

                        <label class="field">
                            <span class="field__label">Şifrə təkrarı</span>
                            <input asp-for="ConfirmPassword" class="input" type="password" placeholder="Yeni şifrəni təkrarlayın" required />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </label>
                    </div>

                    <div class="form__row">
                        <a asp-action="Index" class="btn btn--ghost">Ləğv et</a>
                        <button class="btn btn--primary" type="submit">🔒 Şifrəni dəyiş</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
</section>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}